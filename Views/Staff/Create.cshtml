
@model WebNhanVien.Models.NhanVien
@using WebNhanVien.Controllers
@{
    ViewData["Title"] = "Thêm Mới Nhân Viên";
}

<h1>Thêm Nhân Viên</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="create" asp-controller="staff" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="maNV" class="control-label">Mã nhân viên</label>
                @{
                    var maNhanVien = ViewBag.LastStaffId;
                }
                <input name="MaNhanVien" value="@maNhanVien" class="form-control" disabled /><br />
                <input name="maNhanVien" value="@maNhanVien" hidden />

                <span asp-validation-for="maNV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hoTen" class="control-label">Họ tên</label>
                <input asp-for="hoTen" class="form-control" />
                <span asp-validation-for="hoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ngaySinh" class="control-label">Ngày sinh</label>
                <input asp-for="ngaySinh" class="form-control"  type="date"/>
                <span asp-validation-for="ngaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="soDT" class="control-label">Số điện thoại</label>
                <input asp-for="soDT" class="form-control" />
                <span asp-validation-for="soDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="chucVu" class="control-label">Chức vụ</label>
                <input asp-for="chucVu" class="form-control" />
                <span asp-validation-for="chucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" href="/Staff/Index">Hủy Bỏ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}